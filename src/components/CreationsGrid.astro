---
// Library imports
import { getImage } from "astro:assets"

// Component imports
import CreationsItem from "../components/CreationsItem.astro"

// Image imports
import curiosityDesktop from "../images/desktop/image-curiosity.jpg"
import curiosityMobile from "../images/mobile/image-curiosity.jpg"
import deepEarthDesktop from "../images/desktop/image-deep-earth.jpg"
import deepEarthMobile from "../images/mobile/image-deep-earth.jpg"
import fisheyeDesktop from "../images/desktop/image-fisheye.jpg"
import fisheyeMobile from "../images/mobile/image-fisheye.jpg"
import fromAboveDesktop from "../images/desktop/image-from-above.jpg"
import fromAboveMobile from "../images/mobile/image-from-above.jpg"
import gridDesktop from "../images/desktop/image-grid.jpg"
import gridMobile from "../images/mobile/image-grid.jpg"
import nightArcadeDesktop from "../images/desktop/image-night-arcade.jpg"
import nightArcadeMobile from "../images/mobile/image-night-arcade.jpg"
import pocketBorealisDesktop from "../images/desktop/image-pocket-borealis.jpg"
import pocketBorealisMobile from "../images/mobile/image-pocket-borealis.jpg"
import soccerTeamDesktop from "../images/desktop/image-soccer-team.jpg"
import soccerTeamMobile from "../images/mobile/image-soccer-team.jpg"

// Data
const allCreations = [
  {
    title: "Deep Earth",
    mobileImg: await getImage({
      src: deepEarthMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: deepEarthDesktop,
      format: "webp",
    }),
    imgAlt: "view of the earth from the space",
  },
  {
    title: "Night Arcade",
    mobileImg: await getImage({
      src: nightArcadeMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: nightArcadeDesktop,
      format: "webp",
    }),
    imgAlt: "arcade games under UV light",
  },
  {
    title: "Soccer Team VR",
    mobileImg: await getImage({
      src: soccerTeamMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: soccerTeamDesktop,
      format: "webp",
    }),
    imgAlt: "Soccer player chasing after ball",
  },
  {
    title: "The Grid",
    mobileImg: await getImage({
      src: gridMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: gridDesktop,
      format: "webp",
    }),
    imgAlt: "close up of a race car",
  },
  {
    title: "From up above VR",
    mobileImg: await getImage({
      src: fromAboveMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: fromAboveDesktop,
      format: "webp",
    }),
    imgAlt: "birds eye view of a road passing through nature",
  },
  {
    title: "Pocket Borealis",
    mobileImg: await getImage({
      src: pocketBorealisMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: pocketBorealisDesktop,
      format: "webp",
    }),
    imgAlt: "Borealis at night sky",
  },
  {
    title: "The Curiosity",
    mobileImg: await getImage({
      src: curiosityMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: curiosityDesktop,
      format: "webp",
    }),
    imgAlt: "Rover on mars",
  },
  {
    title: "Make if Fisheye",
    mobileImg: await getImage({
      src: fisheyeMobile,
      format: "webp",
    }),
    desktopImg: await getImage({
      src: fisheyeDesktop,
      format: "webp",
    }),
    imgAlt: "fisheye shot of a promenade",
  },
]
---

<div class="grid">
  {
    allCreations.map((creation) => (
      <CreationsItem
        mobileImage={creation.mobileImg}
        desktopImage={creation.desktopImg}
        altText={creation.imgAlt}
      >
        {creation.title}
      </CreationsItem>
    ))
  }
</div>

<style lang="scss">
  @use "../sass/abstracts" as *;

  .grid {
    display: grid;
    gap: 1.5rem;

    @include mq(medium) {
      grid-template-columns: repeat(2, 1fr);
    }

    @include mq(large) {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
